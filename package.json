{
  "name": "@triforce-heroes/triforce-sarc",
  "description": "Extract and rebuild SARC files.",
  "version": "1.0.0",
  "license": "Apache License 2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsc -p ./tsconfig.build.json && swc ./dist -d ./dist",
    "sarc": "node ./dist/command.js",
    "sarc:watch": "tsx watch ./src/command.ts",
    "prettier": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src",
    "eslint": "eslint ./src",
    "eslint:fix": "eslint --fix ./src",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@rheactor/eslint-config-rheactor": "github:rheactor/eslint-config-rheactor",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.102",
    "@triforce-heroes/triforce-core": "link:..\\triforce-core",
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^1.1.3",
    "commander": "^11.1.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  }
}
